<p id="notice"><%= notice %></p>

<h1>Calcs</h1>

<table>
  <thead>
    <tr>
      <th>Initial deposit</th>
      <th>Number of years</th>
      <th>Profitability per year</th>
      <th>Monthly report</th>
      <th>Risk level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calcs.each do |calc| %>
      <tr>
        <td><%= calc.initial_deposit %></td>
        <td><%= calc.number_of_years %></td>
        <td><%= calc.profitability_per_year %></td>
        <td><%= calc.monthly_report %></td>
        <td><%= calc.risk_level %></td>
        <td><%= link_to 'Show', calc %></td>
        <td><%= link_to 'Edit', edit_calc_path(calc) %></td>
        <td><%= link_to 'Destroy', calc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

